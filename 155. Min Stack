class MinStack {
    private Node head;
    
    /** initialize your data structure here. */
    public MinStack() {
    
    }
    
    public void push(int x) {
        if (head == null) {
            head = new Node(x, null, x);
        } else {
            head = new Node(x, head, Math.min(x, head.min));
        }
    }
    
    public void pop() {
        head = head.next;
    }
    
    public int top() {
        return head.val;
    }
    
    public int getMin() {
        return head.min;
    }
    
    private class Node {
        private int val;
        private Node next;
        private int min;
        
        Node(int val, Node next, int min) {
            this.val = val;
            this.next = next;
            this.min = min;
        }       
    }
}

/**
 * Your MinStack object will be instantiated and called as such:
 * MinStack obj = new MinStack();
 * obj.push(x);
 * obj.pop();
 * int param_3 = obj.top();
 * int param_4 = obj.getMin();
 */
